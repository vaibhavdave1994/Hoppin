<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".activity.ui.authantication.login.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_arrow_pointing_to_right" />

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="@dimen/_94sdp"
            android:layout_marginTop="-10dp"
            android:layout_height="@dimen/_97sdp"
            android:layout_gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_96sdp"
                app:civ_border_color="#7dffc261"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/iv_placeholder_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/placeholder_img" />


            <ImageView
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_camera_ico" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/card_login"
            android:orientation="vertical">


            <TextView
                style="@style/RubikRegularStyleSize16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/sign_up_to_continue"
                android:textColor="@color/colorBlack" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical">


                <TextView
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/first_name" />

                <EditText
                    android:id="@+id/et_firstname"
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_person"
                    android:drawablePadding="@dimen/_12sdp"
                    android:inputType="text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@color/colorLight" />

                <TextView
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/last_name" />

                <EditText
                    android:id="@+id/et_lastname"
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_person"
                    android:drawablePadding="@dimen/_12sdp"
                    android:inputType="textEmailAddress" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@color/colorLight" />

                <TextView
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/email_id" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_close_envelope"
                    android:drawablePadding="@dimen/_12sdp"
                    android:inputType="textEmailAddress" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@color/colorLight" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/RubikLightStyleSize12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number" />


                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_information_button"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:ccp_countryPreference="US,IN,NZ"
                        app:ccp_defaultNameCode="US"
                        app:ccp_showFlag="false"
                        app:ccp_showNameCode="false" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@color/colorBlack1" />

                    <EditText

                        android:id="@+id/et_phonenumber"
                        style="@style/RubikRegularStyle13"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:drawableEnd="@drawable/ic_phone_receiver"
                        android:drawablePadding="@dimen/_12sdp"
                        android:inputType="phone"
                        android:paddingStart="@dimen/_5sdp"
                        android:singleLine="true"
                        tools:ignore="RtlSymmetry" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@color/colorLight" />


                <TextView
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/password" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/selector_toggle_password">

                    <EditText
                        android:id="@+id/et_password"
                        style="@style/RubikLightStyleSize12"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@null"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@color/colorLight" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        style="@style/RubikLightStyleSize13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/recoveremail" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_close_envelope"

                        />

                </RelativeLayout>

                <TextView
                    style="@style/RubikRegularStyle13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="@string/question"
                    android:visibility="gone" />

                <EditText
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editlayout"
                    android:hint="@string/enter_question"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />


                <TextView
                    style="@style/RubikRegularStyle13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/answer"
                    android:visibility="gone" />

                <EditText
                    style="@style/RubikLightStyleSize12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/editlayout"
                    android:hint="@string/enter_answer"
                    android:inputType="text"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/btn_signup"
                    style="@style/RubikRegularStyle14"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/app_btn"
                    android:gravity="center"
                    android:text="@string/sign_up"
                    android:textColor="@color/colorWhite" />

                <LinearLayout
                    android:id="@+id/logl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        tools:ignore="RtlCompat" />

                    <TextView
                        style="@style/RubikLightItalicStyle13"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/or"
                        android:textColor="@color/colorBlack1"
                        tools:ignore="RtlCompat" />


                    <View
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        tools:ignore="RtlCompat" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/facebook_btn"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_facebook" />

                        <TextView
                            style="@style/RubikRegularStyle14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/sign_in_with_facebook"
                            android:textColor="@color/colorWhite" />


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/RubikRegularStyle12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already"
                android:textColor="@color/colorBlack1" />

            <TextView
                android:id="@+id/tv_signin"
                style="@style/RubikMediumStyleSize11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="@string/sign_in1"
                android:textColor="@color/colorBlack1" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>