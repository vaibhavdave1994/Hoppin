<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_addmemory"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:visibility="gone"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/colorGreen"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:tint="@color/colorWhite2"
            app:srcCompat="@drawable/ic_plus_symbol"
             />


        <TextView
            style="@style/RubikRegularStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/iv_plus"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="@string/add_memory"
            android:textColor="@color/colorWhite2" />

        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_hoopmemory"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/_5sdp"
        android:layout_toEndOf="@+id/rl_addmemory"
        app:srcCompat="@drawable/layer"
        />

</RelativeLayout>